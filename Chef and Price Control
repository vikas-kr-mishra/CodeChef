#include <iostream>

using namespace std;

int main()
{
    int t;
    cin>>t;
    for(int i=0;i<t;i++){
        int n,k;
        cin>>n>>k;
        int arr[n], sum = 0,temp;
        for(int j=0;j<n;j++){
            cin>>arr[j];
            if(arr[j]>k){
                 temp= arr[j]-k;
                 sum = sum + temp;
            }
        }
        cout<<sum<<endl;
    }

    //cout << "Hello world!" << endl;
    return 0;
}
